# atom
alias at='atom .'

# git
alias gs='git status'
alias gb='git branch --column'
alias gca='git commit --amend --no-edit'
alias ga='git add -A'
alias gd='git diff --cached'
alias gfb='gb | grep'
alias gco='git checkout'
alias gf='gb | grep'
alias kus='git stash save --keep-index --include-untracked'
alias log="git log --color --pretty=format:'%C(auto)%h %Cred %<(10,trunc)%an %Creset%C(auto)%s %Cgreen(%cr,%ar) %Creset%C(auto)%d'"
alias grs='git reset'
alias wip="git commit -m 'WIP `date`'"
alias unc="git reset --soft HEAD^"
alias gss="git stash save"
alias boom="confirm && git reset --hard"

# utilities
alias rl="source $HOME/.bash_profile"
alias dot="cd $HOME/dotfiles"

# rails
alias rc='rails console'
alias pspec='rake parallel:spec'
